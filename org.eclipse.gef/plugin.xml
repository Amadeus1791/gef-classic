<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.eclipse.gef"
   name="Graphical Editing Framework"
   version="3.0.0"
   provider-name="Eclipse.org"
   class="org.eclipse.gef.GEFPlugin">

   <runtime>
      <library name="gef.jar">
         <export name="*"/>
         <packages prefixes="org.eclipse.gef"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.draw2d" export="true" version="3.0.0"/>
      <import plugin="org.eclipse.core.runtime" export="false"/>
      <import plugin="org.eclipse.core.resources" export="false"/>
      <import plugin="org.eclipse.ui.views" export="false"/>
      <import plugin="org.eclipse.ui.workbench" export="false"/>
      <import plugin="org.eclipse.jface" export="false"/>
      <import plugin="org.eclipse.ui.ide" export="false"/>
   </requires>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="%ViewCategory.Label"
            description="%ViewCategory.Label"
            id="org.eclipse.gef.category.view">
      </category>
      <command
            name="%ZoomIn.Tooltip"
            description="%ZoomIn.Tooltip"
            category="org.eclipse.gef.category.view"
            id="org.eclipse.gef.zoom_in">
      </command>
      <keyBinding
            string="Ctrl+="
            scope="org.eclipse.ui.globalScope"
            command="org.eclipse.gef.zoom_in"
            configuration="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <command
            name="%ZoomOut.Tooltip"
            description="%ZoomOut.Tooltip"
            category="org.eclipse.gef.category.view"
            id="org.eclipse.gef.zoom_out">
      </command>
      <keyBinding
            string="Ctrl+-"
            scope="org.eclipse.ui.globalScope"
            command="org.eclipse.gef.zoom_out"
            configuration="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
   </extension>

</plugin>
