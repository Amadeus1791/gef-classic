<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
    <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.zest"
            name="Visualization">
      </category>
      <wizard
            category="org.eclipse.zest"
            class="org.eclipse.zest.internal.dot.ZestGraphWizard"
            icon="resources/icons/graph.gif"
            id="org.eclipse.zest.dot.ui.ZestGraphWizard"
            name="Zest Graph">
      </wizard>
      <wizard
            name="Zest Project"
            icon="resources/icons/project.gif"
            category="org.eclipse.zest"
            class="org.eclipse.zest.internal.dot.ZestProjectWizard"
            id="org.eclipse.zest.dot.ZestProjectWizard">
      </wizard>
   	</extension>
   	<extension
         id="org.eclipse.zest.dot.ui.builder"
         name="Zest Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.eclipse.zest.internal.dot.ZestBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="org.eclipse.zest.dot.ui.nature"
         name="Zest Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.eclipse.zest.internal.dot.ZestNature">
         </run>
      </runtime>
      <builder
            id="org.eclipse.zest.dot.ui.builder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            lightweight="true"
            location="BOTTOM_RIGHT"
            adaptable="true"
            label="Zest Project Decorator"
            icon="resources/icons/small.gif"
            state="true"
            id="org.eclipse.zest.dot.ui.decorator">
         <enablement>
         <and>
	        <objectState name="projectNature" value="org.eclipse.zest.dot.ui.nature"> </objectState>
	        <or>
	         	<objectState name="name" value="templates"> </objectState>
		        <objectClass name="org.eclipse.core.resources.IProject"> </objectClass>
         	</or>
         </and>
         </enablement>
      </decorator>
   </extension>
   <extension
         id="org.eclipse.zest.dot.ui.problem"
         name="Zest Import Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <!-- We dont want to pollute every project, and I'm not sure we need this at all:
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            nameFilter="*"
            id="org.eclipse.zest.dot.ui.contribution">
         <action
               label="Add/Remove Zest Nature"
               class="org.eclipse.zest.dot.ToggleNatureAction"
               menubarPath="additions"
               enablesFor="+"
               id="org.eclipse.zest.dot.ui.toggleNatureAction">
         </action>
      </objectContribution>
   </extension>
   -->
   <extension
         point="org.eclipse.ui.views">
         <category
            id="org.eclipse.zest"
            name="Visualization">
      </category>
	   <view
	            name="Zest Graph"
	            icon="resources/icons/graph.gif"
	            category="org.eclipse.zest"
	            class="org.eclipse.zest.internal.dot.ZestGraphView"
	            id="org.eclipse.zest.dot.ZestView">
		</view>
	</extension>
    <extension point="org.eclipse.help.toc">
        <toc file="Graphviz-DOT-as-a-DSL-for-Zest-toc.xml" primary="true"/>
    </extension>
    
    <!-- DOT editor -->
    <extension
            point="org.eclipse.ui.editors">
        <editor
            class="org.eclipse.zest.internal.dot.parser.ui.DotExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="dot"
            id="org.eclipse.zest.internal.dot.parser.Dot"
            name="Dot Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="org.eclipse.zest.internal.dot.parser.ui.DotExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="org.eclipse.zest.internal.dot.parser.Dot.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="org.eclipse.zest.internal.dot.parser.ui.DotExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
            commandId="org.eclipse.zest.internal.dot.parser.Dot.validate">
         <activeWhen>
            <reference
                    definitionId="org.eclipse.zest.internal.dot.parser.Dot.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="org.eclipse.zest.internal.dot.parser.Dot.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="org.eclipse.zest.internal.dot.parser.Dot" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="org.eclipse.zest.internal.dot.parser.ui.DotExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="org.eclipse.zest.internal.dot.parser.Dot"
            name="Dot">
            <keywordReference id="org.eclipse.zest.internal.dot.parser.ui.keyword_Dot"/>
        </page>
        <page
            category="org.eclipse.zest.internal.dot.parser.Dot"
            class="org.eclipse.zest.internal.dot.parser.ui.DotExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="org.eclipse.zest.internal.dot.parser.Dot.coloring"
            name="Syntax Coloring">
            <keywordReference id="org.eclipse.zest.internal.dot.parser.ui.keyword_Dot"/>
        </page>
        <page
            category="org.eclipse.zest.internal.dot.parser.Dot"
            class="org.eclipse.zest.internal.dot.parser.ui.DotExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
            id="org.eclipse.zest.internal.dot.parser.Dot.templates"
            name="Templates">
            <keywordReference id="org.eclipse.zest.internal.dot.parser.ui.keyword_Dot"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="org.eclipse.zest.internal.dot.parser.ui.keyword_Dot"
            label="Dot"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="org.eclipse.zest.internal.dot.parser.Dot.validate"
            name="Validate">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
             <command
                 commandId="org.eclipse.zest.internal.dot.parser.Dot.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="org.eclipse.zest.internal.dot.parser.Dot.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
            <command commandId="org.eclipse.xtext.ui.editor.FindReferences">
                <visibleWhen checkEnabled="false">
                    <reference definitionId="org.eclipse.zest.internal.dot.parser.Dot.Editor.opened">
                    </reference>
                </visibleWhen>
            </command>
        </menuContribution>
    </extension>
    <extension point="org.eclipse.ui.handlers">
        <handler
            class="org.eclipse.zest.internal.dot.parser.ui.DotExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.FindReferencesHandler"
            commandId="org.eclipse.xtext.ui.editor.FindReferences">
            <activeWhen>
                <reference
                    definitionId="org.eclipse.zest.internal.dot.parser.Dot.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>   

<!-- adding resource factories -->

    <extension
        point="org.eclipse.emf.ecore.extension_parser">
        <parser
            class="org.eclipse.zest.internal.dot.parser.ui.DotExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
            type="dot">
        </parser>
    </extension>
    <extension point="org.eclipse.xtext.extension_resourceServiceProvider">
        <resourceServiceProvider
            class="org.eclipse.zest.internal.dot.parser.ui.DotExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
            uriExtension="dot">
        </resourceServiceProvider>
    </extension>




    <!-- Quick Outline -->
    <extension
        point="org.eclipse.ui.handlers">
        <handler 
            class="org.eclipse.zest.internal.dot.parser.ui.DotExecutableExtensionFactory:org.eclipse.xtext.ui.editor.outline.quickoutline.ShowQuickOutlineActionHandler"
            commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline">
            <activeWhen>
                <reference
                    definitionId="org.eclipse.zest.internal.dot.parser.Dot.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>
    <extension
        point="org.eclipse.ui.commands">
        <command
            description="Open the quick outline."
            id="org.eclipse.xtext.ui.editor.outline.QuickOutline"
            name="Quick Outline">
        </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.open">
            <command commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline"
                style="push"
                tooltip="Open Quick Outline">
                <visibleWhen checkEnabled="false">
                    <reference definitionId="org.eclipse.zest.internal.dot.parser.Dot.Editor.opened"/>
                </visibleWhen>
            </command>
        </menuContribution>
    </extension>
   <!-- quickfix marker resolution generator -->
   <extension
         point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator
            class="org.eclipse.zest.internal.dot.parser.ui.DotExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator">
      </markerResolutionGenerator>
   </extension>
</plugin>
